{
  "name": "ffmpeg-stream",
  "version": "0.5.0",
  "description": "Node bindings to ffmpeg command, exposing stream based API",
  "author": "phaux <phaux4@gmail.com>",
  "repository": "phaux/node-ffmpeg-stream",
  "license": "MIT",
  "keywords": [
    "ffmpeg",
    "convert",
    "transcode",
    "media",
    "video"
  ],
  "main": "lib",
  "scripts": {
    "prepare": "tsc",
    "test": "run-s test:*",
    "test:eslint": "eslint --ext js,ts .",
    "test:prettier": "prettier --check \"**/*.{js,ts,json}\"",
    "test:tsc": "tsc --noEmit",
    "test:jest": "jest --coverage"
  },
  "jest": {
    "preset": "ts-jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,json}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,ts}": [
      "eslint --fix",
      "git add"
    ]
  },
  "prettier": {
    "semi": false,
    "trailingComma": "all"
  },
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/jest": "^24.0.18",
    "@types/mkdirp": "^0.5.2",
    "@types/node": "^12.7.2",
    "@types/rimraf": "^2.0.2",
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.0.0",
    "husky": "^3.0.4",
    "is-mime": "^0.3.0",
    "jest": "^24.9.0",
    "lint-staged": "^9.2.2",
    "mkdirp": "~0.5.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "rimraf": "~2.4.2",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.3"
  },
  "dependencies": {
    "debug": "^2.2.0"
  }
}
