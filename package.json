{
  "name": "ffmpeg-stream",
  "version": "0.7.0",
  "description": "Node bindings to ffmpeg command, exposing stream based API",
  "author": "phaux <phaux4@gmail.com>",
  "repository": "phaux/node-ffmpeg-stream",
  "license": "MIT",
  "keywords": [
    "ffmpeg",
    "convert",
    "transcode",
    "media",
    "video"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "prepare": "tsc -p tsconfig.build.json --declaration --outDir lib/",
    "test": "run-s test:*",
    "test:eslint": "eslint --ext js,ts .",
    "test:prettier": "prettier --check \"**/*.{js,ts,json}\"",
    "test:tsc": "tsc --noEmit",
    "test:jest": "jest --coverage"
  },
  "files": [
    "lib"
  ],
  "jest": {
    "preset": "ts-jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.{js,ts,json,md}": [
      "prettier --write"
    ],
    "*.{js,ts}": [
      "eslint --fix"
    ]
  },
  "prettier": {
    "arrowParens": "avoid",
    "printWidth": 100,
    "semi": false
  },
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/jest": "^26.0.15",
    "@types/mkdirp": "^1.0.1",
    "@types/node": "^14.14.7",
    "@types/rimraf": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^6.15.0",
    "husky": "^4.3.0",
    "is-mime": "^0.3.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.1",
    "mkdirp": "^1.0.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.4",
    "typescript": "^4.0.5"
  },
  "dependencies": {
    "debug": "^4.2.0"
  }
}
